<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/red"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvCarInfoFav"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:text=" "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarDistFav"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvCarPriceFav"
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:text="Reserved By: "
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvCarFavName"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewInfo2"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:text="Phone Number:"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvCarFavPhone"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReserveFav"
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:text="Reserve"
                android:textColor="@color/red"
                android:textSize="16sp"
                app:icon="@drawable/ic_reserve"
                app:iconTint="@color/red" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>