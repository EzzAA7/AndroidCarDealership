<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCarInfoRes"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:text=" "
            android:textAlignment="center"
            android:textColor="#474343"
            android:textSize="15dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarDistRes"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#474343"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvCarPriceRes"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#474343"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:text="Reserved By: "
                android:textAlignment="textStart"
                android:textColor="#474343"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvCarReserverName"
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewInfo2"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:text="Phone Number:"
                android:textAlignment="textStart"
                android:textColor="#474343"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvCarReserverPhone"
                android:layout_width="224dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewInfo3"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:text="Date &amp; Time:"
                android:textAlignment="textStart"
                android:textColor="#474343"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvCarReserverDateTime"
                android:layout_width="224dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>